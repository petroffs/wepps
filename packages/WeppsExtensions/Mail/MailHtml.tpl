<table border="0" cellpadding="0" cellspacing="0" width="100%">
	<tr valign="bottom">
		<td colspan="3" height="30" style="background-color: #f7f7f7">&nbsp;</td>
	</tr>
	<tr valign="bottom">
		<td width="15%" height="40" style="background-color: #f7f7f7">&nbsp;</td>
		<td width="70%"
			style="font: bold 14pt 'verdana', sans-serif;
	color: #000000"
			align="center">
			<div
				style="padding: 10px 10px 5px 10px;
	background: none 0 0 repeat-x;
	border-radius: 5px;
	text-align: center">
				<a href="{$host.url}">
					<img src="{$host.url}{$settings.logo}" width="200" border="0">
				</a>
			</div>
			<div
				style="padding: 5px 0px 0px 0px;
	font: normal 10pt 'verdana', sans-serif;
	width: auto;
	text-align: right;
	border-top: 1px solid #cdcdcd"></div>
			<div style="padding: 0 10px;
	text-align: center">{$subject}</div>
		</td>
		<td width="15%" style="background-color: #f7f7f7">&nbsp;</td>
	</tr>
	<tr valign="top">
		<td width="15%" style="background-color: #f7f7f7">&nbsp;</td>
		<td width="70%" height="300"
			style="font: normal 10pt 'verdana', sans-serif">
			<div style="padding: 30px 10px">{$text}</div>
		</td>
		<td width="15%" style="background-color: #f7f7f7">&nbsp;</td>
	</tr>
	<tr>
		<td style="background-color: #f7f7f7">&nbsp;</td>
		<td>
			<div
				style="padding: 10px 10px 10px 10px;
	font: normal 10pt 'verdana', sans-serif;
	background: #e4e4e4;
	text-align: center;
	color: gray;
	border: 1px solid #cdcdcd;
	border-radius: 0px">
				<a href="https://$site" style="color: gray">{$host.title}</a> | <a
					href="mailto:{$settings.email}" style="color: gray">{$settings.email}</a>
			</div>
		</td>
		<td style="background-color: #f7f7f7">&nbsp;</td>
	</tr>
	<tr valign="bottom">
		<td colspan="3" height="30" style="background-color: #f7f7f7">&nbsp;</td>
	</tr>
</table>